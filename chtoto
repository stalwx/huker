#include <Keyboard.h>
// C миллисами
int buttonPin = 2;
int count;        // Счетчик
int incr = 1000;  // Увеличение времени за оборот
int decr = 200;   // Дискретность

void setup() {
  count = 0;
  pinMode(buttonPin, INPUT_PULLUP);
  Serial.begin(38400);
}

void loop() {
  int buttonValue = digitalRead(buttonPin);
  if (buttonValue == LOW) {
    count += incr; 
  }
  if (count > 0) {
    Keyboard.press('w');
    delay(decr);
    count -= decr;
    //Keyboard.releaseAll(); - ненад отжимать.
  } 
  else {
    Keyboard.releaseAll();
  }
}
